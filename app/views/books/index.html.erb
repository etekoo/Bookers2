<!-- ユーザーの詳細 -->
<% if current_user.present? %>
    <h4>User info</h4>
    <%= image_tag current_user.get_profile_image(200,200) %>
    <h3>name: <%= current_user.name %></h3>
    <h4>introduction</h4>
    <p><%= current_user.introduction %></p>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
  <% else %>
    <p>ユーザーが存在しません。</p>
  <% end %>

<!-- 新規投稿フォーム -->
<h2>New book</h2>
<%= form_with(model: @book, url: books_path) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!-- 投稿一覧 -->
<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td>
        <%= image_tag book.user.get_profile_image(100, 100) %>
    </td>
    <td>
      <%= link_to book.title, book_path(book) %>
    </td>
    <td><%= book.body %></td>
  </tr>
<% end %>
  </tbody>
</table>

