<!-- ユーザー詳細・投稿フォーム -->
<% if current_user.present? %>
  <%= render partial: 'books/user_info', locals: { user: current_user } %>
<% else %>
  <p>ユーザーが存在しません。</p>
<% end %>

<%= render partial: 'books/form', locals: { book: @book } %>

<!-- 投稿一覧 -->
<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td>
        <%= image_tag book.user.get_profile_image(100, 100) %>
    </td>
    <td>
      <%= link_to book.title, book_path(book) %>
    </td>
    <td><%= book.body %></td>
  </tr>
<% end %>
  </tbody>
</table>

