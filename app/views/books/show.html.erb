<!-- ユーザーの詳細 -->
<div>
  <h4>User info</h4>
  <%= image_tag @user.get_profile_image(200,200) %>
  <h3>name: <%= @user.name %></h3>
  <h4>introduction</h4>
  <p><%= @user.introduction %></p>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- 新規投稿フォーム -->
<h2>New book</h2>
<%= form_with(model: @book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!-- 投稿詳細 -->
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

    <tr>
      <td>
        <%= image_tag @post.user.get_profile_image(100, 100) %>
      </td>
      <td><%= @post.title %></td>
      <td><%= @post.body %></td>
    </tr>
</table>

<% if @post.user == current_user %>
    <%= link_to "edit", edit_book_path(@post), method: :get %>
<% end %>

