<!-- ユーザーの詳細 -->
 <% if current_user.present? %>
    <h4>User info</h4>
    <%= image_tag current_user.get_profile_image(200,200) %>
    <h3>name: <%= current_user.name %></h3>
    <h4>introduction</h4>
    <p><%= current_user.introduction %></p>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
  <% else %>
    <p>ユーザーが存在しません。</p>
  <% end %>

<!-- 新規投稿フォーム -->
<h2>New book</h2>
<%= form_with(model: @book, url: books_path) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!-- ユーザーの投稿一覧 -->
<table>
  <tr>
    <th>プロフィール画像</th>
    <th>ユーザー名</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
  <% end %>
</table>