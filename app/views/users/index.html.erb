<!-- ユーザー詳細・投稿フォーム -->
<% if current_user.present? %>
  <%= render partial: 'books/user_info', locals: { user: current_user } %>
<% else %>
  <p>ユーザーが存在しません。</p>
<% end %>

<%= render partial: 'books/form', locals: { book: @book } %>

<!-- ユーザーの投稿一覧 -->
<table>
  <tr>
    <th>プロフィール画像</th>
    <th>ユーザー名</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
  <% end %>
</table>