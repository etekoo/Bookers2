<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->
<table>
  <tr>
    
    <th>タイトル</th>
    <th>本文</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100, 100) %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>