<!-- ユーザーの詳細 -->
<div>
  
  <h4>User info</h4>
  <%= image_tag @user.get_profile_image(200,200) %>
  <h3>name: <%= @user.name %></h3>
  <h4>introduction</h4>
  <p><%= @user.introduction %></p>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- 新規投稿フォーム -->
<h2>New book</h2>
<%= form_with(model: @book, url: books_path) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!-- ユーザーの投稿一覧 -->
<table>
  <tr>
    
    <th>タイトル</th>
    <th>本文</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100, 100) %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>